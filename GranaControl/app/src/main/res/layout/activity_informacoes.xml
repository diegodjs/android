<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/linearInformacoes"
    android:background="@color/colorBackground">


<!-- ANO INICIAL ################################################################ -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/anoInicial"
                android:textStyle="bold" />

            <NumberPicker
                android:id="@+id/pickerAnoInicial"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <!-- ############################################################################### -->


<!-- MES INICIAL ################################################################ -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mesInicial"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerMes"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
<!-- ############################################################################### -->


<!-- GRANA CONTA ################################################################ -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp" >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/granaConta"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextGranaConta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekbarGranaConta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|end"
                android:max="100000"
                android:padding="5dp"
                android:layout_marginRight="20dp"
                android:progressBackgroundTint="@color/colorButton"
                android:secondaryProgressTint="@color/colorProgress"
                android:secondaryProgress="100000" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!-- ############################################################################### -->


<!-- ALERTA DE GASTO ################################################################ -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp" >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alertaGasto"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextAlerta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekbarAlerta"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="start|end"
                android:layout_weight="1"
                android:max="100000"
                android:padding="5dp"
                android:layout_marginRight="20dp"
                android:progressBackgroundTint="@color/colorButton"
                android:secondaryProgressTint="@color/colorProgress"
                android:secondaryProgress="100000" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
<!-- ############################################################################### -->



    <Button android:id="@+id/buttonAvancar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/avancar"
        android:textColor="@color/colorTextButton"
        android:textStyle="bold"
        android:background="@color/colorButton"
        android:layout_gravity="center"/>


</LinearLayout>